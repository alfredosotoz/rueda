<p id="notice"><%= notice %></p>

<h1>Listing Casas</h1>

<table>
  <thead>
    <tr>
      <th>Colonia</th>
      <th>Calle</th>
      <th>Numero casa</th>
      <th>Superficie terreno</th>
      <th>Superficie construccion</th>
      <th>Banos</th>
      <th>Recamaras</th>
      <th>Cochera</th>
      <th>Jardin</th>
      <th>Precio</th>
      <th>Descripcion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @casas.each do |casa| %>
      <tr>
        <td><%= casa.colonia %></td>
        <td><%= casa.calle %></td>
        <td><%= casa.numero_casa %></td>
        <td><%= casa.superficie_terreno %></td>
        <td><%= casa.superficie_construccion %></td>
        <td><%= casa.banos %></td>
        <td><%= casa.recamaras %></td>
        <td><%= casa.cochera %></td>
        <td><%= casa.jardin %></td>
        <td><%= casa.precio %></td>
        <td><%= casa.descripcion %></td>
        <td><%= link_to 'Show', casa %></td>
        <td><%= link_to 'Edit', edit_casa_path(casa) %></td>
        <td><%= link_to 'Destroy', casa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

